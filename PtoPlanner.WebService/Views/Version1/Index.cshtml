@{
    Layout = null;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>PTO Planner</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
    <script type="text/javascript" src="/Scripts/jqueryflot/jquery.flot.min.js"></script>
    <script type="text/javascript" src="/Scripts/jqueryflot/jquery.flot.time.min.js"></script>
    <link rel="stylesheet" type="text/css" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/themes/smoothness/jquery-ui.css" />
    <link rel="stylesheet" type="text/css" href="/Content/Version1/style.css" />
</head>
<body data-ng-app="ptoPlanner">
    <div id="container" data-ng-controller="ptoController">

        <h1>PTO Planner</h1>

        <div id="chartContainer">
            <div id="placeholder" data-chart=""></div>
        </div>
        <div id="notes" data-ng-show="floatingHolidayResult != ''">
            <strong>Floating Holiday Alert!</strong> - {{floatingHolidayResult}}
        </div>

        <form name="ptoForm" id="dataEntry">
            <div id="divStartingBalance">
                <span class="label">Starting Balance:</span>
                <input type="number" step="0.01" id="numStartingBalance" data-ng-model="startingBalance" data-ng-change="startingBalanceChanged()" />
            </div>

            <fieldset id="fstAddPto">
                <legend>Add PTO:</legend>
                <span class="label">From:</span>
                <input type="text" name="dateFrom" data-ng-model="newPto.dateFrom" data-ng-change="dateFromChanged()" class="date" />
                <span class="label">To:</span>
                <input type="text" name="dateTo" data-ng-model="newPto.dateTo" data-ng-change="dateToChanged()" class="date" />
                <span class="label">Type:</span>
                <select data-ng-model="newPto.ptoType" data-ng-options="k as v for (k,v) in ptoTypes">
                    <option value="">-- Select PTO Type --</option>
                </select>
                <button type="button" data-ng-click="addPto()"
                        data-ng-disabled="!newPto.dateFrom || !newPto.dateTo || !newPto.ptoType">
                    Add
                </button>
                <br />
                Note: <input type="text" size="51" data-ng-model="newPto.note" />
            </fieldset>

            <table id="tblPto" data-ng-hide="ptoList.length == 0">
                <tr>
                    <th>From</th>
                    <th>To</th>
                    <th>Type</th>
                    <th>&nbsp;</th>
                </tr>
                <tr data-ng-repeat="pto in ptoList track by pto.id | orderBy:'dateFrom'">
                    <td>{{ pto.dateFrom | date:'shortDate' }}</td>
                    <td>{{ pto.dateTo | date:'shortDate' }}</td>
                    <td>{{ ptoTypes[pto.ptoType] }}</td>
                    <td>{{ pto.comment }}</td>
                    <td><button data-ng-click="removePto(pto.id)">&times;</button></td>
                </tr>
            </table>
        </form>
    </div>

    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.4/angular.min.js"></script>
    <script src="/Scripts/Version1/app/app.js"></script>
    <script src="/Scripts/Version1/app/controllers.js"></script>
    <script src="/Scripts/Version1/app/directives.js"></script>
    <script src="/Scripts/Version1/app/services.js"></script>
</body>
</html>