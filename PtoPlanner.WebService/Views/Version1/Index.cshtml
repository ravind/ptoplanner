@{
    Layout = null;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" data-ng-app="ptoPlanner">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width" />
    <title>PTO Planner</title>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Open+Sans:300,400,700&amp;subset=latin">
    @*<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.2.0/css/font-awesome.min.css">*@
    <link rel="stylesheet" type="text/css" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/themes/smoothness/jquery-ui.css" />
    <link rel="stylesheet" type="text/css" href="/Content/Version1/style.css" />
</head>
<body data-ng-controller="ptoController">
    <div class="hdr">
        <div class="pullright">
            <span>Year:</span>
            <select ng-model="selectedYear" ng-options="yr as yr for yr in yearList" ng-change="selectedYearChanged()"></select>
        </div>
        <h1>PTO Planner</h1>
    </div>

    <div id="container">

        <h2 class="h2">Setup</h2>
        <fieldset class="clearfix">
            <div class="inblock">
                <label class="blocklabel">Carry Over:</label>
                <input type="number" step="0.01" id="numStartingBalance" data-ng-model="curSettings.PtoCarriedOver" />
            </div>
            <div class="inblock">
                <label class="blocklabel">Employee Status:</label>
                <select ng-model="curSettings.EmployeeStatus" ng-options="emp.id as emp.name for emp in empStatuses"></select>
            </div>
            <div class="inblock">
                <label class="blocklabel">Hire Date:</label>
                @*<select ng-model="curSettings.HireYear" ng-options="hireYear.val as hireYear.label for hireYear in hireYears"></select>*@
                <input type="radio" name="hy" ng-model="curSettings.HireYear" value="20"> 2012 or before
                <br />
                <input type="radio" name="hy" ng-model="curSettings.HireYear" value="15"> 2013 or later
            </div>
            <div class="inblock">
                <label class="blocklabel">Prorate Start:</label>
                <input type="text" ng-model="curSettings.ProrateStart" placeholder="mm/dd/yyyy" data-dp="">
            </div>
            <div class="inblock">
                <label class="blocklabel">Prorate End:</label>
                <input type="text" ng-model="curSettings.ProrateEnd" placeholder="mm/dd/yyyy" data-dp="">
            </div>
            <div class="inblock">
                <label class="blocklabel">&nbsp;</label>
                <button type="submit" ng-click="saveSettings()">Save</button>
            </div>

        </fieldset>
        <br />
        <div id="chartContainer">
            <div id="placeholder" data-chart=""></div>
        </div>
        <div class="clearfix">
            <div class="float50">

                <h2 class="h2">Add PTO</h2>
                <fieldset id="fstAddPto">
                    <form name="ptoForm" id="dataEntry" class="clearfix">
                        <div class="float33">
                            <span class="label">From:</span>
                            <input type="text" id="dateFrom" name="dateFrom" placeholder="mm/dd/yyyy" data-ng-model="currentPto.StartDate" data-ng-change="dateFromChanged()" />
                        </div>
                        <div class="float33">
                            <span class="label">To:</span>
                            <input type="text" id="dateTo" name="dateTo" placeholder="mm/dd/yyyy" data-ng-model="currentPto.EndDate" data-ng-change="dateToChanged()" />
                        </div>
                        @*<div class="float33">
                            <span class="label">Type:</span>
                            <select data-ng-model="currentPto.PtoType" data-ng-options="p.id as p.name for p in ptoTypes"></select>
                        </div>*@
                        <div class="float33">
                            <span class="label">Note:</span>
                            <input type="text" size="51" data-ng-model="currentPto.Note" />
                        </div>
                        <div class="float66">
                            <span class="label">Full PTO or half.</span>
                            <input type="checkbox" ng-model="currentPto.HalfDays"> Log this PTO as half days (4 hrs per day).
                            @*<input type="radio" ng-model="currentPto.HalfDays" value="0" name="HalfDays"> 8 hrs.
                            &nbsp;&nbsp;&nbsp;
                            <input type="radio" ng-model="currentPto.HalfDays" value="1" name="HalfDays"> 4 hrs.*@
                        </div>
                        <div class="float33">
                            <span class="label">&nbsp;</span>
                            <button type="button" data-ng-click="savePto()" data-ng-disabled="!currentPto.StartDate || !currentPto.EndDate || !currentPto.PtoType" ng-bind="currentPto.Url ? 'Update' : 'Add'"></button>
                        </div>
                    </form>
                </fieldset>
                <h2 class="h2">Holidays</h2>
                <fieldset>
                    <div id="holidaysFLT" class="holiday-section">
                        <div ng-repeat="fh in floatingHolidays" class="{{fh.date ? 'on' : 'off'}}" on-last-repeat><p>{{fh.name}}</p><input type="text" placeholder="mm/dd/yyyy" ng-model="fh.date" data-qdp='{"qEnd": {{fh.quarter * 3}}}' /></div>
                    </div>
                    <hr>
                    <div id="holidaysSTD" class="holiday-section">
                        <div ng-repeat="sh in standardHolidays" class="{{sh.inPast ? 'on' : 'off'}}"><p><span ng-bind="sh.name"></span><br /><span ng-bind="sh.date | date:'EEEE'"></span><br /><span ng-bind="sh.date | date:'MMM dd'"></span></p></div>
                    </div>
                </fieldset>
            </div><div class="float50">
                <h2 class="h2">PTO List</h2>
                <table id="tblPto" class="tbl" data-ng-hide="ptoList.length == 0">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>From</th>
                            <th>To</th>
                            <th>Note</th>
                            <th>Full/Half</th>
                            <th class="nowrap" title="Contains Holiday">*</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr data-ng-repeat="pto in ptoList track by pto.Url | orderBy:'StartDate'">
                            <td ng-bind="pto.PtoType == 2 ? 'FH' : 'PTO'"></td>
                            <td ng-bind="pto.StartDate | date:'shortDate'"></td>
                            <td ng-bind="pto.EndDate | date:'shortDate'"></td>
                            <td ng-bind="pto.Note"></td>
                            <td ng-bind="pto.HalfDays ? 'Half' : 'Full'"></td>
                            <td>0</td>
                            <td class="nowrap">
                                <button type="button" class="btn-change" ng-click="editPto(pto)" ng-hide="pto.PtoType == 2">Edit</button>
                                <button data-ng-click="removePto(pto.Url)" ng-hide="pto.PtoType == 2">&times;</button>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr><td colspan="7" class="allign-right">* Contains Holiday(s)</td></tr>
                    </tfoot>
                </table>
                <h2 class="h2">Totals</h2>
                <table class="tbl totals">
                    <thead>
                        <tr><th>To Date</th><th>Earned</th><th>Used</th><th>Expired</th><th>Available</th></tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Hours</td>
                            <td ng-bind="todateEarned | number:2">0</td>
                            <td ng-bind="tdDaysUsed * 8 | number:2">0</td>
                            <td ng-bind="todateHoursLost | number:2">0</td>
                            <td ng-bind="todateHoursAvailable | number:2">0</td>
                        </tr>
                        <tr>
                            <td>Days</td>
                            <td ng-bind="todateEarned / 8 | number:2">0</td>
                            <td ng-bind="tdDaysUsed | number:2">0</td>
                            <td ng-bind="todateHoursLost / 8 | number:2">0</td>
                            <td ng-bind="todateHoursAvailable / 8 | number:2">0</td>
                        </tr>
                    </tbody>
                    <thead>
                        <tr><th>Yr End</th><th>Earned</th><th>Used</th><th>Expired</th><th>Available</th></tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Hours</td>
                            <td ng-bind="( ( curSettings.HireYear * 8 ) / curSettings.EmployeeStatus ) + curSettings.PtoCarriedOver | number:2">0</td>
                            <td ng-bind="yeDaysUsed * 8 | number:2">0</td>
                            <td ng-bind="lostBalance | number:2">0</td>
                            <td ng-bind="ptoBalance | number:2">0</td>
                        </tr>
                        <tr>
                            <td>Days</td>
                            <td ng-bind="( curSettings.HireYear / curSettings.EmployeeStatus ) + ( curSettings.PtoCarriedOver / 8 ) | number:2">0</td>
                            <td ng-bind="yeDaysUsed | number:2">0</td>
                            <td ng-bind="lostBalance / 8 | number:2">0</td>
                            <td ng-bind="ptoBalance / 8 | number:2">0</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
    <script src="/Scripts/jqueryflot/jquery.flot.min.js"></script>
    <script src="/Scripts/jqueryflot/jquery.flot.time.min.js"></script>
    <script src="/Scripts/jqueryflot/jquery.flot.symbol.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.4/angular.min.js"></script>
    <script src="/Scripts/Version1/app/app.js"></script>
    <script src="/Scripts/Version1/app/controllers.js"></script>
    <script src="/Scripts/Version1/app/directives.js"></script>
    <script src="/Scripts/Version1/app/services.js"></script>
</body>
</html>